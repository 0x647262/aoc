{
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "friendsofphp/php-cs-fixer": "*",
    "phpmd/phpmd": "*",
    "vimeo/psalm": "*",
    "phpunit/phpunit": "*",
    "phan/phan": "*",
    "phpstan/phpstan": "^0.12.59"
  },
  "autoload": {
    "psr-4": {
      "AoC2020\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit tests",
    "analyze": [
      "phan --allow-polyfill-parser",
      "phpstan analyze src --level 8",
      "psalm --show-info=true"
    ]
  }
}
