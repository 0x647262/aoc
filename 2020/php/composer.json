{
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "friendsofphp/php-cs-fixer": "*",
    "phpmd/phpmd": "*",
    "vimeo/psalm": "*",
    "phpunit/phpunit": "*",
    "phan/phan": "*",
    "phpstan/phpstan": "*"
  },
  "autoload": {
    "psr-4": {
      "AoC2020\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit tests",
    "analyze": [
      "PHAN_DISABLE_XDEBUG_WARN=1 phan --allow-polyfill-parser",
      "phpstan analyze src --level 8",
      "psalm --show-info=true"
    ],
    "solve": "php aoc2020.php"
  }
}
